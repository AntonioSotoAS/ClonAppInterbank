<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Pokemon Image"
            android:paddingTop="0dp" />

        <!-- Espacio entre la imagen y la descripción -->
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Contenedor para la descripción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Descripción -->
            <TextView
                android:id="@+id/txtTipoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuenta Simple en soles"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/ 0.67 "
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/txtTipoCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="saldo disponible"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
